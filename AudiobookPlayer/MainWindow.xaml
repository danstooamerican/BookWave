<Window x:Class="AudiobookPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Commons"
        xmlns:lib="clr-namespace:Commons.Controls;assembly=Commons.Controls" 
        mc:Ignorable="d"
        Background="{StaticResource RichBlackBrush}"
        
        Title="MainWindow" Height="450" Width="800">
  <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical"
                    Grid.Column="0" Grid.Row="0"                  >

            <lib:MenuButton Content="Start" />

            <lib:MenuButton Content="Browse" />

            <Border Style="{StaticResource Separator}"  />

            <lib:MenuButton Content="Authors" />

            <lib:MenuButton Content="Genre" />

            <lib:MenuButton Content="Favorites" />

        </StackPanel>
      
    </Grid>
</Window>
