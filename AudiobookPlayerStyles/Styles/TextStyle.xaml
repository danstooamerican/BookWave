<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Commons.Styles.Styles">

    <ResourceDictionary.MergedDictionaries>

        <ResourceDictionary Source="/Commons.Styles;component/Colors/colors.xaml"/>

    </ResourceDictionary.MergedDictionaries>
    
    <Style x:Key="InformationText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource GrayBrush}" />
        <Setter Property="FontWeight" Value="DemiBold" />
        <Setter Property="FontSize" Value="12" />
    </Style>

    <Style x:Key="InputMaskText" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource GrayBrush}" />
        <Setter Property="FontWeight" Value="DemiBold" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style x:Key="InformationTextHighlight" TargetType="TextBlock" BasedOn="{StaticResource InformationText}">
        <Setter Property="Foreground" Value="{StaticResource LightGrayBrush}" />
        <Setter Property="FontSize" Value="14" />
    </Style>

</ResourceDictionary>